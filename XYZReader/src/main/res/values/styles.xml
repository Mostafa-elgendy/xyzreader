<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorPressedHighlight">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.Bacon.Detail" parent="Theme.Bacon">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="RobotoHeaderTextStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/detail_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoSubheaderTextStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/main_header_text_size</item>
    </style>

    <style name="RobotoBodyTextStyle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/main_header_text_size</item>
    </style>

    <style name="RobotoNavHeaderLight" parent="RobotoSubheaderTextStyle">
        <item name="android:textColor">@color/accent</item>
    </style>
    <style name="RobotoBodyTextStyle2" parent="RobotoSubheaderTextStyle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


</resources>
